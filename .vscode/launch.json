    "version": "0.2.0",
    "configurations": [
        {
            "name": "Pelican ETL (Debug)",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/cli/etl.py",
            "console": "integratedTerminal",
            "args": [
                "--input", "sample.enex",
                "--vault", "test_vault",
                "--format", "enex"
            ],
            "cwd": "${workspaceFolder}",
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            }
        },
        {
            "name": "Pelican ETL: ALL Tests",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/venv/Scripts/pytest",
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        }
    ]
}